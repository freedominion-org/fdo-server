# Find specified "text" within all files under specified folder
# Usage: findinfiles "text to search for" /Folder/to/search

SEARCH_TEXT=$1
SEARCH_FOLDER=$2

if [ $# -ne 2 ]
then
  echo ""
  echo "Usage:   ${0} SEARCH_TEXT SEARCH_FOLDER"
  echo "Example: ${0} needle /usr/share/haystack"
  echo ""
  exit 1
fi

find "${SEARCH_FOLDER}" -type f -exec grep "${SEARCH_TEXT}" {} \; -print
